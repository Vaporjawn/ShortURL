{
  "name": "shorturl",
  "version": "1.0.0",
  "description": "A free, fast, and open-source URL shortener built with TypeScript, Express, and MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:watch": "nodemon --exec ts-node src/server.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vaporjawn/ShortURL.git"
  },
  "keywords": [
    "url-shortener",
    "typescript",
    "express",
    "mongodb",
    "nodejs",
    "open-source"
  ],
  "author": "Victor Williams <victor.williams.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Vaporjawn/ShortURL/issues"
  },
  "homepage": "https://github.com/Vaporjawn/ShortURL#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.22.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.3",
    "nanoid": "^3.3.7"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
